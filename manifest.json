{
  "manifest_version": 2,
  "name": "Tocando na Cidade",
  "description": "Veja aqui o que está tocando na Rádio Cidade 102.9. O que é bom é pra sempre!",
  "version": "1.1",
  "icons": { "16": "images/logo-cidade.png", "128": "images/logo-cidade.png" },
  "browser_action": {
    "default_icon": "images/logo-cidade.png",
    "default_popup": "popup.html"
  },
  "permissions" : [
  	"http://www.radiocidade.fm/",
    "notifications"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.jpeg"
  ],
  "background": {
    "page" : "back.html"
  }
}